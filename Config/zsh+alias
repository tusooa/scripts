that()
{
    local dir="$HOME/Logs/$(date +%Y/%m/)"
    mkdir -pv "$dir"
    echo "å¼€å§‹ã€‚"
    arecord -f cd -t raw | lame -x -r /dev/stdin "${dir}$(date +%d,%u,%H,%M,%S)"
    echo "å®Œæˆã€‚"
}
pd()
{
    local fn="$1"
    shift
    perl -MCarp::Always -Mdiagnostics "$(which "$fn")" "$@"
}
