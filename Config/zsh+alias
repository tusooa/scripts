function inList
{
    local var="$1" i
    shift
    for i in "$@" ; do
        if [[ "$var" = "$i" ]] ; then
            return 0
        fi
    done
    return 1
}

c()
{
    if [ "$*" ] ; then
        LC_ALL=C "$@"
    fi
}

